{
  "name": "gpu-site",
  "description": "GPU and Rendering tutorial web site",
  "license": "MIT",
  "author": "Chris Lambert",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && npm run analyze -- --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && npm run analyze -- --exclude dist && build-storybook",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "buildshaders": "node ./build/buildshaders.js src/webgl/shaders src/webgl/shaders.ts"
  },
  "dependencies": {
    "@shoelace-style/shoelace": "^2.0.0-beta.86",
    "@vaadin/router": "^1.7.4",
    "lit": "^2.0.2",
    "lit-element": "^3.2.2",
    "lit-html": "^2.5.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^4.3.0",
    "twgl.js": "^5.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/eslint-config": "^8.0.2",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-storybook": "^0.0.2",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.14.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "indent": [
        1,
        "tab"
      ],
      "no-tabs": 0,
      "no-shadow": 2,
      "space-in-parens": [
        "error",
        "always"
      ],
      "brace-style": "off",
      "nonblock-statement-body-position": [
        "error",
        "below"
      ],
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "object-curly-newline": [
        "error",
        {
          "ImportDeclaration": "never",
          "ExportDeclaration": "always"
        }
      ],
      "linebreak-style": "off",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
	  "lines-between-class-members": "off",
	  "no-bitwise": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "customElements": "custom-elements.json"
}
